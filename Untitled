class Person() {
  constructor(name) {
    this.name = name;
  }
}

let arrOfPeople = [];

app.get('/sendPage', (req,res) => {
    res.send('file');
});

app.post('/sendPage', () => {
  let newPerson = new Person(req.body.name);
  arrOfPeople.push(newPerson);
  res.redirect('/newPersonAdded');
});

app.get('/personAdded', (req,res) => {
    res.send('file', {people: arrOfPeople});
});
